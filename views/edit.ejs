<%include ./partials/header%>

<div class="ui text main container raised black segment">
    
<form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="post">
 
           <h1>Edit Blog</h1>
        <div class="field">
          
             <label >Title</label>
            <input type="text" name="blog[title]" value="<%=blog.title%>">
        </div>
        <div class="field">
           
            <label >Image</label>
            <input type="text" name="blog[image]" value="<%=blog.image%>">
        </div>
        <div class="field">
            <!--style="text-align:left"-->
            <label >Blog Content</label>
           <textarea name="blog[body]"><%-blog.body%></textarea>
          </div>
        <button class="ui black button">Submit</button>
    
</form>
</div>


<% include ./partials/footer%>

